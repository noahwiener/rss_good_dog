<% @articles.each do |article| %>
<!--  add logic here to see if current user's articles inlcudes this one-->
  <h2><%=  article.title %></h2>
  <%= link_to("Read the article online", article.link) %>
  <% if current_user %>
    <%= link_to "star", {controller: "articles",
                         action: "create",
                         article: {
                           user_id: current_user.id,
                           title: article.title,
                           url: article.link
                         }},
                         method: "post" %>
  <% else %>
    Not signed in
  <% end %>
  <br>
<% end %>


