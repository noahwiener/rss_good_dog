<% @articles.each do |article| %>
  <h2><%=  article.title %></h2>
  <%= link_to("Read the article online", article.link) %>
  <% if current_user %>
    <% if current_user.articles.exists?(title: article.title) %>
      <%= "this is already liked" %>
    <% else %>
      <%= link_to "star", {controller: "articles",
                         action: "create",
                         article: {
                           user_id: current_user.id,
                           title: article.title,
                           url: article.link
                         }},
                         method: "post" %>
    <% end %>
  <% else %>
    Not signed in
  <% end %>
  <br>
<% end %>


