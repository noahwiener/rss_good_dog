<div class="login-content">

  <h2>Sign In</h2>

  <form action="<%= session_url %>" method="post">
    <%= auth_token %>

    <label>
      Username
      <input type="text" name="user[user_name]" value="">
    </label>
    <br>

    <label>
      Password
      <input type="password" name="user[password]" value="">
    </label>
    <br><br>

    <input type="submit" value="Sign In">
  </form>

  <br>
    <em>Don't have an account?</em>
    <br>
    <em><%= link_to "Click here to create your username", new_user_url %></em>
    <br><br>
    <div class="row">
      <div class="rumo col-xs-2 col-xs-offset-4">
        <%= link_to '<img src="/dog.jpg">'.html_safe,
        {controller: "sessions", action: "create",
          user: {user_name: "Rumo", password: "rumopassword"}},
          method: "post"
         %>
      </div>
      <div class="alt-login-text col-xs-3">
        Or click on Noah's own Good Dog, Rumo, to log in as a guest.
      </div>
    </div>
</div>
